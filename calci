#include<stdio.h>
void main()
{
int ch;
float a,b,c;

printf("enter the values of a,b:\n");
scanf("%f%f",&a,&b);

printf("enter 1 for addition\n");
printf("enter 2 for subtraction\n");
printf("enter 3 for multiplication\n");
printf("enter 4 for division");

scanf("%d",&ch);

switch(ch)
{
case 1:
c=a+b;
printf("the sum=%f",c);
case 2:
c=a-b;
printf("the difference=%f",c);
case 3:
c=a*b;
printf("the product=%f",c);
case 4:
c=a/b;
printf("the quotient is=%f",c);
default:
printf("wrong choice");
}
}
